{
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "allowImportExportEverywhere": false,
        "ecmaFeatures": {
          "spread": true
        }
    },
    "rules": {
        "indent": ["warn", 4, {
            "SwitchCase": 1
        }],
        "semi": [
            "warn",
            "always"
        ],
        "no-console": "off",
        "no-undef": "off",
        "accessor-pairs": [
            "error",
            {
                "getWithoutSet": true
            }
        ],
        "array-callback-return" : "error",
        "consistent-return" : "error",
        "no-extra-boolean-cast": "off",
        "no-mixed-spaces-and-tabs": "off"
    }
}
